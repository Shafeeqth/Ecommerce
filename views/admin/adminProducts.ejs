<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Nest Dashboard</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:title" content="" />
    <meta property="og:type" content="" />
    <meta property="og:url" content="" />
    <meta property="og:image" content="" />
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="assets/imgs/theme/favicon.svg" />
    <!-- Template CSS -->
    <link href="/assets/css/main.css?v=1.1" rel="stylesheet" type="text/css" />
</head>

<body>
    <%- include('../partials/sidenav.ejs') -%>
        <main class="main-wrap">

            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Products List</h2>
                        <p>Products at KartFy.</p>

                    </div>
                    <div>
                        <a href="/admin/products/add-product" class="btn btn-dark ">Add Product</a>
                    </div>
                </div>
                <div class="card mb-4 ">
                    <header class="card-header">

                        <div class="row">
                            <div class="col-3 fw-bold fs-5">Title</div>
                            <div class="col-3 fw-bold fs-5">Description</div>
                            <div class="col-4 fw-bold fs-5">Images</div>
                          

                        </div>


                    </header>


                    <div class="card-body">
                        <div class="table-responsive" id="Reload">
                            <table class="table table-hover">

                                <tbody>



                                    <%if(Array.isArray(products) && products.length> 0 ){%>
                                        <tr >
                                            <%products.forEach((product)=> { %>

                                                <td class="col-2 ">
                                                    <%=product.title%>
                                                </td>
                                                <td class="col-3 ">
                                                    <%=product.description%>
                                                </td>

                                                <td class="col-3 text-center">
                                                    <a href="#" class="itemside">
                                                        <div class="" >

                                                            <img src="/Data/uploads/<%= product.images[0]%>"
                                                                class="img-md rounded mx-2 " alt="Userpic" />

                                                        </div>
                                                        <!-- <div class="info pl-3">
                                                            <h6 class="mb-0 title" style="text-transform: capitalize;"></h6>
                                                            <small class="text-muted">Seller ID: #439</small>
                                                        </div> -->
                                                    </a>
                                                </td>
                                                
                                                <td class="text-center col-4" id="status">
                                                    <%if(!product.isDeleted) {%>
                                                    <button id="button"
                                                        style="background-color: rgb(40, 40, 102) ; color: aliceblue;"
                                                        class="btn btn-md   mx-2" 
                                                        onclick="">
                                                        <%= product.isListed ? "Unlist" : "List" %>
                                                    </button>
                                                
                                                <%}%>
                                                
                                                <%if(!product.isDeleted) {%>
                                                
                                                    <button id="button"
                                                       
                                                        class="btn btn-md btn-danger mx-2" name=""
                                                        status=""
                                                        onclick="Delete('<%=product._id%>', '<%=product.title%>')">
                                                        Delete
                                                    </button>
                                               
                                                <%}else{%>
                                                    
                                                    <button id="button"
                                                        
                                                        class="btn btn-lg btn-secondary " 
                                                         name=""
                                                        disabled
                                                        >
                                                        Deleted
                                                    </button>
                                                
                                                <%}%>


                                                <%if(!product.isDeleted) {%>

                                                    <a href="/admin/products/edit-product?<%=product._id%>"
                                                        class="btn btn-md btn-dark mx-2">
                                                        Edit
                                                    </a>
                                                </td>
                                                <%}%>
                                        </tr>


                                        <%})}else{%>
                                            <tr>
                                                <td colspan="5">No user found</td>
                                            </tr>


                                            <%}%>

                                </tbody>
                            </table>
                            <!--  table-responsive.// -->
                        </div>
                    </div>

                </div>
                <!-- card end// -->
                <div class="pagination-area mt-15 mb-50">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">

                            <a class="page-link" href="?page="><i class="material-icons md-chevron_left"></i></a>

                            <li class="page-item ">
                                <a class="page-link" href="?page="></a>
                            </li>

                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>

                            <a class="page-link" href="?page="><i class="material-icons md-chevron_right"></i></a>

                        </ul>

                    </nav>
                </div>
            </section>
            <!-- content-main end// -->
            <%- include('../partials/adminFooter.ejs') -%>
        </main>
        <script src="/node_modules/sweetalert2/dist/sweetalert2.all.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="/assets/js/vendors/jquery-3.6.0.min.js"></script>
        <script src="/assets/js/vendors/bootstrap.bundle.min.js"></script>
        <script src="/assets/js/vendors/select2.min.js"></script>
        <script src="/assets/js/vendors/perfect-scrollbar.js"></script>
        <script src="/assets/js/vendors/jquery.fullscreen.min.js"></script>
        <!-- Main Script -->
        <script src="/assets/js/main.js" type="text/javascript"></script>
</body>

</html>


<script>
    function listProduct(productId) {
        const data = {
            id: productId
        }
        $.ajax({
            type: 'POST',
            url: '/admin/product/list-product',
            data: JSON.stringify(data),
            contentType: 'application/json',
            success: (response) => {
                if (response.listed == true) {
                    $('#Reload').load('/admin/product #Reload');
                }
            }
        })
    }



    function Delete(id, title) {
        const data = { id: id }
        Swal.fire({
            titel: "Are you sure!",
            text: `Do you want to delete ${title}`,
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '3085d6',
            cancelButtonColor: 'd33',
            confirmButtonText: 'Yes'

        })
            .then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: 'delete',
                        url: '/admin/products/delete-product',
                        data: JSON.stringify(data),
                        contentType: 'application/json',
                        success: (response) => {
                            if (response.ok) {
                                $('#Reload').load('/admin/products #Reload',()=> 
                                {
                                Swal.fire({
                                    title: 'Deleted!',
                                    icon: 'success',
                                    text: 'Successfully deleted!',
                                    times: 1500,
                                }) })
                            }

                        }



                    })
                }
            })


    }
</script>