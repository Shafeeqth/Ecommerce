<body>
    <%-include('../partials/userHeader')%>
    <style>
        span{
            font-weight: bold;
        }
    </style>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>
    <!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <div class="">
                <div class="row align-items-center justify-content-center my-5 py-3 ">
                    <h3 class="coupon__link text-secondary "> Order placed successfully!!</h3>
                </div>
            </div>
            <form action="/api/v1/users/home" class="checkout__form m-0">
                <div class="row">
                    <div class="col-lg-8">
                        
                        <div class="row">
                            
                            <div class="col-lg-12">
                                <div class="card-body">  
                                    <div class="col">
                                        <div class="card">
                                            <h5 class="card-header text-center  bg-light text-dark my-3">Delivery Details</h5>
                                            <div class="card-body">
                                                <h6 class="card-title">Full Name : <span><%=currentOrder.address.name%></span></h6>
                                                <p class="card-text"></p>
                                                <p class="card-text">Phone : <span><%=currentOrder.address.phone%></span></p>
                                                <p class="card-text">Street : <span><%=currentOrder.address.street%></span></p>
                                                <p class="card-text">Locality : <span><%=currentOrder.address.locality%></span></p>
                                                <p class="card-text">District : <span><%=currentOrder.address.district%></span></p>
                                                <p class="card-text">State : <span><%=currentOrder.address.state%></span></p>
                                                <p class="card-text">Pin code : <span><%=currentOrder.address.pincode%></span></p>
                                              <div class="d-flex justify-content-end ">
                                               
                                                
                                                </div>
                                            </div>
                                        </div>                             
                                    </div>       
                                </div>
                               
                            </div>
                        </div>
                    </div> 
                    <div class="col-lg-4">
                        <div class="checkout__order">
                            <h5 class="card-header text-center  bg-light text-dark my-3" >Order Details</h5>
                            <div class="checkout__order__product">
                                <ul style="padding-left: 0px !important;">
                                    <li>
                                        Order No. :
                                        <span class="top__text__right"><%=currentOrder.orderId%></span>
                                    </li>
                                    <li>Payment method :<span><%=currentOrder.paymentMethod%></span></li>
                                    <% const formattedDate =
                                    currentOrder.createdAt.toLocaleString('en-US', { weekday: 'short',
                                    month: 'short', day: 'numeric', year: 'numeric', hour:
                                    'numeric', minute: 'numeric', second: 'numeric', hour12:
                                    true }); %>
                                    <li>Order date : <span><%=formattedDate%></span></li>
                                    
                                </ul>
                            </div>
                            <div class="checkout__order__total">
                                <ul style="padding-left: 0px !important;">
                                    <li>Subtotal <span>₹ <%=currentOrder.orderAmout%>.00</span></li>
                                    <!-- <li>Discount <span>₹ </span></li> -->
                                    <li>Shipping cost <span>₹ <%=currentOrder.deliveryCharge%>.00</span></li>
                                    <li>Total <span>₹<%=currentOrder.orderAmout + currentOrder.deliveryCharge %>.00</span></li>
                                </ul>
                            </div>
                            <a href="/api/v1/shop" class="btn btn-primary ">Continue Shoping</a>
                           
                            
                        </div>
                    </div>
                </div>
            </form>
            <div class="row align-items-center justify-content-center m-0">
                <h4 class="text-center mt-3 text-secondary m-0" >Products will be shipped within 1-3 working days</h4>
            </div>
        </div>
    </section>
    <!-- Footer Section Begin -->
    
    <!-- Footer Section End -->

    <!-- Search Begin -->
   
    <!-- Search End -->
</body>
<%-include('../partials/userFooter')%>
