<header class="header">
  <div class="header__top">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-7">
          <div class="header__top__left">
            <p>Free shipping, 30-day return or refund guarantee.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-3">
        <div class="header__logo">
          <a href="/api/v1/"><img src="img/logo.png" alt="" /></a>
        </div>
      </div>
      <div class="col-lg-6 col-md-6">
        <nav class="header__menu mobile-menu">
          <ul>
            <li class="active"><a href="/">Home</a></li>
            <li><a href="/shop">Shop</a></li>

            <li><a href="/contact">Contacts</a></li>
            <li><a href="/about">About Us</a></li>
          </ul>
        </nav>
      </div>
      <div class="col-lg-3 col-md-3">
        <div class="header__nav__option">
          <div
            class="dropdown"
            style="display: inline-block; margin-right: 1rem"
          >
            <% const dropdown = locals.logedIn ? 'Account' : 'Login' %>
            <button
              class="btn btn-outline-dark dropdown-toggle"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <%= dropdown %>
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/account">Account</a></li>
              <%if(!locals.logedIn) {%>
              <li><a class="dropdown-item" href="/login">Login</a></li>
              <%}%>
              <li>
                <%if(locals.logedIn) {%>
                <form action="/logout" method="post">
                  <div class="d-flex align-items-center">
                    <svg
                      style="margin-top: 0.3rem; margin-left: 3px"
                      width="24"
                      height="24"
                      class=""
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        fill="#2874F0"
                        stroke-width="0.3"
                        stroke="#2874F0"
                        d="M13 3h-2v10h2V3zm4.83 2.17l-1.42 1.42C17.99 7.86 19 9.81 19 12c0 3.87-3.13 7-7 7s-7-3.13-7-7c0-2.19 1.01-4.14 2.58-5.42L6.17 5.17C4.23 6.82 3 9.26 3 12c0 4.97 4.03 9 9 9s9-4.03 9-9c0-2.74-1.23-5.18-3.17-6.83z"
                      ></path>
                    </svg>
                    <button
                      class="btn"
                      style="padding-left: 1px"
                      id="btn"
                      type="submit"
                    >
                      Logout
                    </button>
                  </div>
                </form>

                <!-- <button class="dropdown-item" id="btn" type="button">Logout</button> -->

                <%}%>
              </li>
            </ul>
          </div>

          <a href="/wishlist" style="margin-right: 2em"
            ><img src="img/icon/heart.png" alt=""
          /></a>

          <a href="/cart" style="text-decoration: none; font-weight: bold">
            <div class="price" style="position: relative">
              <i class="fa-solid fa-cart-shopping"></i>
              <span
                id="count"
                style="
                  position: absolute;
                  top: -8px;
                  left: 13px;
                  background-color: #010102;
                  border-radius: 50%;
                  padding: 2px 6px;
                  color: #f8f1f1;
                  font-size: 12px;
                "
                ><%= cart?.products.length || 0%>
              </span>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</header>
