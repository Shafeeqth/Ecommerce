                                        </tr>
                                           
                                        <tr  class="product-row rounded shadow-sm" data-target="<%=product[0]._id%>">
                                                    

                                                <td class="col-xl-3 fw-2">
                                                Product Name: <br><br><span><%=product[0].title%></span> 
                                                </td>
                                                
                                                <td class="col-5">
                                                  Description: <br><br> <span><%=product[0].description%></span> 
                                                </td>
                                                <td class="col-2">
                                                   Category:<br> 
                                                   <%if(Array.isArray(product[0].category )&& product[0].category.length >0) {%>
                                                    <%product[0].category.forEach( item => {%> 
                                                    <%for(let key in item){%>
                                                        <br><span><%=key %> : <%= item[key]%></span>
                                                        
                                                        <%}%>
                                                    
                                                    <%})%>
                                                   <%}else{%>
                                                    NULL
                                                    <%}%>
                                                </td>
                                                <td class="col">
                                                    Stock: <br><br><span> <%=product[0].inventory.totalStock%></span> 
                                                 </td>
                                            </tr>
                                                <tr>
                                                <td class="col">
                                                   MRP: <br><br><span> ₹ <%=product[0].mrpPrice%>.00</span> 
                                                </td>
                                               
                                                <td class="col">
                                                  Price:<br><br> <span>₹ <%=product[0].price%>.00</span> 
                                                </td>
                                                <td class="col">
                                                   Color: <br><br><span><%=product[0].color%></span>
                                                </td>
                                                <% const formattedDate =
                                                product[0].createdAt.toLocaleString('en-US', { 
                                                month: 'short', day: 'numeric', year: 'numeric', }); %>
                                                <td class="col"> 
                                                   Added at : <br> <%= formattedDate %></td>
                                               

                                                

                                                
                                               
                                                
                                        </tr>




                                        
                                    <%}else{%>
                                            <tr>
                                                <td colspan="5">No user found</td>
                                            </tr>


                                            <%}%>
                                            
                                    <%if(Array.isArray(product[0]?.inventory?.sizeVariant) && product[0]?.inventory?.sizeVariant?.length > 0){%>
                                        <table class="table">
                                            <thead class="thead-dark">
                                              <tr>
                                                <th class="fw-bold text-center" scope="col">Index</th>
                                                <th class="fw-bold text-center" scope="col">Size</th>
                                                <th class="fw-bold text-center" scope="col">Stock</th>
                                                
                                              </tr>
                                            </thead>
                                            <%let index = 1 %>
                                        <%product[0]?.inventory.sizeVariant.forEach(variant=> {%>
                                            



                                           
                                        <tr>
                                            <td class="col-2 text-center">
                                                <%= index++ %>%>
                                            </td>   
                                      <td class="col-lg-5 text-center">
                                            <%=variant.size%> 
                                        </td>
                                        
                                        <td class="col-5 text-center">
                                            <%=variant.stock%> Count
                                        </td>
                                    </tr>
                                        
                                    <%})%>
